@model TheRestaurant.ViewModels.RecipeFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Recipe</h2>

@using (Html.BeginForm("Save", "Recipes"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.Recipe.Name)
        @Html.TextBoxFor(m => m.Recipe.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Recipe.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Recipe.DishTypeId)
        @Html.DropDownListFor(m => m.Recipe.DishTypeId, new SelectList(Model.DishTypes, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Recipe.DishTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Recipe.Description)
        @Html.TextBoxFor(m => m.Recipe.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Recipe.Description)
    </div>
